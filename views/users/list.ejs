


      <!-- Content Header (Page header) -->
      <section class="content-header">
            <h1>
             Users
            </h1>
           
          </section>
      
          <!-- Main content -->
          <section class="content">


<p>
        <a href="/users/create" class="btn btn-success">Add New</a>
    </p>
    <table class="table table-bordered" id="usersTable">
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
    
        <tbody>
           <!-- data coming from server -->
        </tbody>
    
    </table>
            
       </section>
</section>


<script>
        $("#usersTable").DataTable({
            "processing": false,
            "serverSide": false,
            "ajax": {
                "url": "/users/getData",
                "type": "POST",
                "dataSrc":"data"
            },
            "columnDefs":[{
                        "targets":6,
                        "data":"id",
                        "render": function (data, type, row, meta){
                            var msg = "Are you sure to delete ?";
                            return '<a href="/users/'+data+'/edit" class="btn btn-info btn-sm">Edit</a>'+
                            '<a href="/users/'+data+'/delete" onclick="return confirm(msg);" class="btn btn-danger btn-sm">Delete</a>';
                        }
            }],
            columns: [ 
                    { data : "id" },
                    { data : "name" },
                    { data : "email" },
                    { data : "phone" },
                    { data : "role" },
                    { data : "address" },
                    { data : "id"}
                ]
        });
        </script>