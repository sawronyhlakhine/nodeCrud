 <!-- Content Header (Page header) -->
 <section class="content-header">
        <h1>
         Locations
        </h1>
       
      </section>
  
      <!-- Main content -->
      <section class="content">


<p>
    <a href="/locations/create" class="btn btn-success">Add New</a>
</p>
<table id="locationsTable" class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Parent</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        <!-- data coming from server -->
    </tbody>

</table>
        
   </section>
</section>


<script>
$("#locationsTable").DataTable({
    "processing": false,
    "serverSide": false,
    "ajax": {
        "url": "/locations/getData",
        "type": "POST",
        "dataSrc":"data"
    },
    "columnDefs":[{
                "targets":4,
                "data":"id",
                "render": function (data, type, row, meta){
                    var msg = "Are you sure to delete ?";
                    return '<a href="/locations/'+data+'/edit" class="btn btn-info btn-sm">Edit</a>'+
                    '<a href="/locations/'+data+'/delete" onclick="return confirm(msg);" class="btn btn-danger btn-sm">Delete</a>';
                }
    }],
    columns: [ 
            { data : "id" },
            { data : "name" },
            { data : "type" },
            { data : "parent_id"},
            { data : "id"}
        ]
});
</script>