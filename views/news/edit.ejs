<!-- Content Header (Page header) -->
<section class="content-header">
        <h1>
         UPdate News
        </h1>
       
      </section>
  
      <!-- Main content -->
      <section class="content">
            <% if(errors) { %>
                <% for(var i=0; i<errors.length;i++) {%>
                    <p class="alert alert-danger"><%= errors[i].msg %></p>
                <% } %>
        <% } %>
            <form action="/news/<%= news.id %>/update" method="POST" enctype="multipart/form-data">

                    <div class="form-group">
                         <label for="">Title</label>
                         <input type="text" class="form-control" name="title" value="<%= news.title %>"/>
                    </div>
                    <div class="form-group">
                        <label for="">Thumbnail</label>
                        <input type="file" name="thumbnail" class="form-control" />
                     </div>
                     <div class="form-group">
                            <label for="">Description</label>
                            <textarea name="description" class="form-control"><%= news.description %></textarea>
                       </div>   
                       <div class="form-group">
                            <label for="">Author</label>
                            <select name="created_by" class="form-control">
                                <option value="">Choose One</option>
                                <% for(var i = 0; i < users.length; i++){ %>
                                    <option value="<%= users[i].id %>" <%= (users[i].id==news.created_by)? "selected":"" %> ><%= users[i].name %></option>
                                    <% } %>
                            </select>
                            </div>
                    <div class="form-group">
                        <label for="">Type </label>
                        <select name="type" class="form-control">
                            <option value="">Choose One</option>
                            <% for(var i = 0; i < post_types.length; i++){ %>
                                <option value="<%= i %>" <%= (news.type==i)? "selected":"" %> ><%= post_types[i] %></option>
                                <% } %>
                        </select>
                   </div>
                   <div class="form-group">
                        <label for="">Township</label>
                        <select name="township_id" class="form-control">
                            <option value="">Choose One</option>
                            <% for(var i = 0; i < townships.length; i++){ %>
                                <option value="<%= townships[i].id %>" <%= (news.township_id==townships[i].id)? "selected":"" %>><%= townships[i].name %></option>
                                <% } %>
                        </select>
                        </div>
                        <div class="form-group">
                                <label for="">Start Date</label>
                                <input type="text" class="form-control" name="start_date" value="<%= news.start_date %>" />
                           </div>
                           <div class="form-group">
                                <label for="">End Date</label>
                                <input type="text" class="form-control" name="end_date" value="<%= news.end_date %>"/>
                           </div>
                    <div class="form-group">
                        <label for="">Status</label>
                        <select name="status" class="form-control">
                                <option value="">Choose One</option>
                                <% for(var i = 0; i < post_status.length; i++){ %>
                                    <option value="<%= i %>" <%= (news.status==i)? "selected":"" %>><%= post_status[i] %></option>
                                    <% } %>
                            </select>
                   </div>             
                                    
                
                       <div class="form-group">
                           <button class="btn btn-success">Submit</button>
                           <a href="/news" class="btn btn-warning">Cancel</a>
                       </div>
                
                </form>
                
        
   </section>
</section>